@using MudBlazor
@using Rapide.Web.Models

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-secondary">
                    <div class="card-header small">
                        <h3 class="card-title">Sales Invoice History Information</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    @* Content here... *@
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <MudDataGrid Dense T="InvoiceModel" @ref="dataGrid" ServerData="ServerReload" Filterable="false">
                                    <ToolBarContent>
                                        <MudText Typo="Typo.h6"></MudText>
                                        <MudSpacer />
                                        <MudTextField T="string" ValueChanged="@(s=>OnSearch(s))" Placeholder="Search" Adornment="Adornment.Start"
                                                      AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Small" Class="mt-0"></MudTextField>
                                    </ToolBarContent>
                                    <Columns>
                                        @* <PropertyColumn Property="x => x.Id" Title="Id" /> *@
                                        <PropertyColumn Property="x => x.InvoiceNo" Title="Invoice No." Filterable="false">
                                            <CellTemplate>
                                                <MudStack Row>
                                                    <MudLink Href="@string.Format("/operations/invoices/{0}", @context.Item.Id.ToString())">@context.Item.InvoiceNo</MudLink>
                                                </MudStack>
                                            </CellTemplate>
                                        </PropertyColumn>
                                        <PropertyColumn Property="x => x.Customer" Title="Customer Name" Filterable="false">
                                            <CellTemplate>
                                                <MudStack Row>
                                                    <MudText>@($"{context.Item.Customer.FirstName} {context.Item.Customer.LastName}")</MudText>
                                                </MudStack>
                                            </CellTemplate>
                                        </PropertyColumn>
                                        <PropertyColumn Property="x => x.JobOrder" Title="Job Order" Filterable="false">
                                            <CellTemplate>
                                                <MudStack Row>
                                                    <MudLink Href="@string.Format("/operations/job-orders/{0}", @context.Item.JobOrder.Id.ToString())">@context.Item.JobOrder.ReferenceNo</MudLink>
                                                </MudStack>
                                            </CellTemplate>
                                        </PropertyColumn>
                                        <PropertyColumn Property="x => x.DueDate" Title="Invoice Due Date" Filterable="false">
                                            <CellTemplate>
                                                <MudStack Row>
                                                    <MudText>@(((DateTime)context.Item.DueDate).ToShortDateString())</MudText>
                                                </MudStack>
                                            </CellTemplate>
                                        </PropertyColumn>
                                        <PropertyColumn Property="x => x.TotalAmount" Title="Total Amount" Format="N2" Filterable="false" />
                                        <TemplateColumn Title="Action" Filterable="false" Sortable="false">
                                            <CellTemplate>
                                                <MudStack Row>
                                                    <MudButton Size="@Size.Medium" Variant="@Variant.Filled" Href="@string.Format("/operations/job-orders/{0}", @context.Item.Id.ToString())" Color="@Color.Primary"><i class="fa fa-pencil-square-o"></i></MudButton>
                                                </MudStack>
                                            </CellTemplate>
                                        </TemplateColumn>
                                    </Columns>
                                    <PagerContent>
                                        <MudDataGridPager T="InvoiceModel" />
                                    </PagerContent>
                                </MudDataGrid>
                            </div>
                        </div>
                        @* <br />
                        <button @onclick="OnAddNewClick" class="btn btn-danger float-left">Add New Job Order </button> *@
                    </div>
                    <div class="card-footer">
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>