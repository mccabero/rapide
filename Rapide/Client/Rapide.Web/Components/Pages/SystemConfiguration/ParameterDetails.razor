@page "/configurations/parameters/add"
@page "/configurations/parameters/{parameterId}"
@using MudBlazor
@using Rapide.DTO

@if (IsLoading)
{
    <MudOverlay Visible="true" DarkBackground="true" ZIndex="9999">
        <MudProgressCircular Color="Color.Secondary" Size="Size.Large" Class="ms-n1" Indeterminate="true" />
    </MudOverlay>
}

<MudMessageBox @ref="mbox" Title="Confirmation" CancelText="No">
    <MessageContent>
        <i class="bi bi-exclamation-triangle"></i> Are you sure you want to save changes?
    </MessageContent>
    <YesButton>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Check">Yes</MudButton>
    </YesButton>
</MudMessageBox>

<PageTitle>Manage Parameter</PageTitle>

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Manage Parameter</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="/configurations/parameters">Parameter List</a></li>
                    <li class="breadcrumb-item active">Manage Parameter</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-secondary">
                    <div class="card-header">
                        <h3 class="card-title" >Parameter Information</h3>
                    </div>

                    <div class="card-body">
                        <MudForm @ref="form" @bind-IsValid="@success" @bind-Errors="@errors" Class="mud-form-custom">
                            <div class="row">
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label>Parameter Group</label>
                                        <MudAutocomplete T="ParameterGroupDTO"
                                                Margin="Margin.Dense"
                                                @bind-Value="ParameterRequestModel.ParameterGroup"
                                                SearchFunc="@Search"
                                                Variant="Variant.Outlined"
                                                ToStringFunc="@(e=> e==null?null : $"{e.Name}")"
                                                ShowProgressIndicator="true"
                                                Strict="false"
                                                Required="true" RequiredError="This field is required!"
                                                Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search"
                                                Clearable="true">
                                            <NoItemsTemplate>
                                                <MudText Align="Align.Center" Class="px-4 py-1">
                                                    No items found
                                                </MudText>
                                            </NoItemsTemplate>
                                            <AfterItemsTemplate>
                                                <div class="pa-2">
                                                    <MudButton OnClick="(() => OnAddNewItemClick())" Color="Color.Primary">Add New Parater Group</MudButton>
                                                </div>
                                            </AfterItemsTemplate>
                                        </MudAutocomplete>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label>Parameter Code<code> *</code></label>
                                        <MudTextField T="string"
                                            Required="true"
                                            RequiredError="Code is required!"
                                            MaxLength="100"
                                            @bind-Value="ParameterRequestModel.Code"
                                            For="(() => ParameterRequestModel.Code)"
                                            Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Code"
                                            Margin="Margin.Dense" Variant="Variant.Outlined" Clearable />
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label>Parameter Name<code> *</code></label>
                                        <MudTextField T="string"
                                            Required="true" RequiredError="Name is required!"
                                            MaxLength="100"
                                            @bind-Value="ParameterRequestModel.Name"
                                            For="(() => ParameterRequestModel.Name)"
                                            Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.SettingsAccessibility"
                                            Margin="Margin.Dense" Variant="Variant.Outlined" Clearable />
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label>Sort Order</label>
                                        <MudNumericField Min="0" @bind-Value="ParameterRequestModel.SortOrder"
                                            Margin="Margin.Dense"
                                            Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Numbers"
                                            Variant="Variant.Outlined" Clearable />
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label>Numberic Data</label>
                                        <div class="input-group">
                                            <MudNumericField Min="0"
                                                             @bind-Value="ParameterRequestModel.NumericData" 
                                                Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Numbers"
                                                Margin="Margin.Dense" Variant="Variant.Outlined" Clearable />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label>Other Data</label>
                                        <MudTextField T="string"
                                            MaxLength="100"
                                            @bind-Value="ParameterRequestModel.OtherData"
                                            For="(() => ParameterRequestModel.OtherData)"
                                            Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.DevicesOther"
                                            Margin="Margin.Dense" Variant="Variant.Outlined" Clearable />
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label>Description</label>
                                        <MudTextField T="string"
                                            Lines="3"
                                            MaxLength="255"
                                            @bind-Value="ParameterRequestModel.Description"
                                            For="(() => ParameterRequestModel.Description)"
                                            Margin="Margin.Dense" Variant="Variant.Outlined" Clearable />
                                    </div>
                                </div>
                            </div>
                        </MudForm>
                    </div>
                    <div class="card-footer">
                    </div>
                </div>
                <div class="row">
                    @if (!isViewOnly)
                    {
                        <div class="col-md-6" style="padding-bottom: 10px !important;">
                            <button type="button" @onclick="OnSaveClick" class="btn btn-primary btn-block"><i class="fa fa-floppy-o"></i> Save</button>
                        </div>
                    }
                    <div class="@(isViewOnly ? "col-md-12" : "col-md-6")">
                        <button type="button" @onclick="OnCancelClick" class="btn btn-danger btn-block"><i class="fa fa-ban"></i> Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>