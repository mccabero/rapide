@page "/configurations/memberships/add"
@page "/configurations/memberships/{membershipId}"
@using Rapide.DTO
@using MudBlazor
@using System.ComponentModel.DataAnnotations
@using Rapide.Web.Helpers

@if (IsLoading)
{
    <MudOverlay Visible ="true" DarkBackground="true" ZIndex="9999">
        <MudProgressCircular Color="Color.Secondary" Size="Size.Large" Class="ms-n1" Indeterminate="true" />
    </MudOverlay>    
}

<MudMessageBox @ref="mbox" Title="Confirmation" CancelText="No">
    <MessageContent>
        <i class="bi bi-exclamation-triangle"></i> Are you sure you want to save changes?
    </MessageContent>
    <YesButton>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Check">Yes</MudButton>
    </YesButton>
</MudMessageBox>

<PageTitle>Manage Membership</PageTitle>

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Manage Membership</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="/configurations/memberships">Membership List</a></li>
                    <li class="breadcrumb-item active">Manage Membership</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <MudForm @ref="form" @bind-IsValid="@success" @bind-Errors="@errors" Class="mud-form-custom">
                    <div class="card card-secondary">
                        <div class="card-header">
                            <h3 class="card-title">Membership Information</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>

                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <label>Membership Number</label>
                                        @if (!string.IsNullOrEmpty(MembershipId))
                                        {
                                            <MudTextField T="string"
                                                      Disabled="true" @bind-value="MembershipRequestModel.MembershipNo"
                                                      Variant="Variant.Outlined" Margin="Margin.Dense" />
                                        }
                                        else
                                        {
                                            <MudTextField T="string"
                                                      Disabled="true" Placeholder="System Generated"
                                                      Variant="Variant.Outlined" Margin="Margin.Dense"
                                                      Class="membership-input" />
                                        }
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <label>Membership Date<code> *</code></label>
                                        <MudDatePicker DateFormat="MM/dd/yyyy"
                                                       Required="true" RequiredError="This field is required!"
                                                       Variant="Variant.Outlined" Margin="Margin.Dense"
                                                       @bind-Date="MembershipRequestModel.MembershipDate" />
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <label>Expiry Date<code> *</code></label>
                                        <MudDatePicker DateFormat="MM/dd/yyyy"
                                                       Required="true" RequiredError="This field is required!"
                                                       Variant="Variant.Outlined" Margin="Margin.Dense"
                                                       @bind-Date="MembershipRequestModel.ExpiryDate" />
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <label>Points Earned</label>
                                        <MudNumericField Step="1"
                                                         Required="true" RequiredError="This field is required!"
                                                         Variant="Variant.Outlined" Margin="Margin.Dense"
                                                         @bind-Value="MembershipRequestModel.PointsEarned"
                                                         For="(() => MembershipRequestModel.PointsEarned)" />
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <label>Customer Name<code> *</code></label>
                                        <MudAutocomplete T="CustomerDTO"
                                        ValueChanged="@OnCustomerChanged"
                                        Value="@MembershipRequestModel.Customer" SearchFunc="@SearchCustomer"
                                        ToStringFunc="@(e => e == null ? null : $"{e.FirstName} {e.LastName}")"
                                        Required="true" RequiredError="This field is required!"
                                        ShowProgressIndicator="true"
                                        Strict="false" Clearable="true"
                                        Margin="Margin.Dense" Variant="Variant.Outlined"
                                        Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search">
                                            <NoItemsTemplate>
                                                <MudText Align="Align.Center" Class="px-4 py-1">
                                                    No items found
                                                </MudText>
                                            </NoItemsTemplate>

                                            <AfterItemsTemplate>
                                                <MudButton OnClick="@OnAddNewItemClick" Color="Color.Primary"><i class="fas fa-plus"> Add New Customer</i></MudButton>
                                            </AfterItemsTemplate>
                                        </MudAutocomplete>
                                            
                                    </div>
                                </div>
                                <div class="col-sm-1">
                                    <div class="form-group">
                                        <label style="margin-bottom: 3px !important;">Is Active?<code> *</code></label>
                                        <MudSwitch @bind-Value="MembershipRequestModel.IsActive" Color="Color.Success">@(MembershipRequestModel.IsActive ? "Active" : "Inactive")</MudSwitch>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card-footer">
                        </div>
                    </div>

                    <div class="card card-secondary">
                        <div class="card-header">
                            <h3 class="card-title">Personal Information</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>

                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <label>First Name</label>
                                        <MudTextField T="string"
                                                      Variant="Variant.Outlined" Margin="Margin.Dense"
                                                      @bind-Value="MembershipRequestModel.Customer.FirstName"
                                                      Disabled="true" />

                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <label>Middle Name</label>
                                        <MudTextField T="string"
                                                      Variant="Variant.Outlined" Margin="Margin.Dense"
                                                      @bind-Value="MembershipRequestModel.Customer.MiddleName"
                                                      Disabled="true" />

                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <label>Last Name</label>
                                        <MudTextField T="string"
                                                      Variant="Variant.Outlined" Margin="Margin.Dense"
                                                      @bind-Value="MembershipRequestModel.Customer.LastName"
                                                      Disabled="true" />

                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <label>Birth Date</label>
                                        <MudDatePicker DateFormat="MM/dd/yyyy"
                                                       Variant="Variant.Outlined" Margin="Margin.Dense"
                                                       @bind-Date="MembershipRequestModel.Customer.Birthday"
                                                       Disabled="true" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card-footer">
                        </div>
                    </div>

                    <div class="card card-secondary">
                        <div class="card-header">
                            <h3 class="card-title">Contact Information</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>

                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Mobile Number<code> *</code></label>
                                        <MudTextField T="string"
                                                      Mask="@(new PatternMask("0000 000 0000"))"
                                                      Variant="Variant.Outlined" Margin="Margin.Dense"
                                                      Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Phone"
                                                      @bind-Value="MembershipRequestModel.Customer.MobileNumber"
                                                      Disabled="true" />

                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Email Address<code> *</code></label>
                                        <MudTextField T="string"
                                                      Variant="Variant.Outlined" Margin="Margin.Dense"
                                                      Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Email"
                                                      Validation="@(new EmailAddressAttribute() {ErrorMessage = "The email address is invalid"})"
                                                      @bind-Value="MembershipRequestModel.Customer.Email"
                                                      Disabled="true" />

                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label>Address</label>
                                        <MudTextField T="string"
                                                      Variant="Variant.Outlined" Margin="Margin.Dense"
                                                      Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.House"
                                                      @bind-Value="MembershipRequestModel.Customer.HomeAddress"
                                                      Disabled="true" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card-footer">
                        </div>
                    </div>
                </MudForm>

                <div class="row">
                    <div class="col-md-6" style="padding-bottom: 10px !important;">
                        <button type="button" @onclick="OnSaveClick" class="btn btn-primary btn-block"><i class="fa fa-floppy-o"></i> Save</button>
                    </div>
                    <div class="col-md-6">
                        <button type="button" @onclick="OnCancelClick" class="btn btn-danger btn-block"><i class="fa fa-ban"></i> Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>