@page "/operations/jobs-board"


<PageTitle>Jobs Board</PageTitle>

<div class="content-wrapper kanban" style="margin-left: 0px !important; overflow: scroll !important;">

<div class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1 class="m-0">Jobs Board</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active">Jobs Board</li>
                </ol>
            </div>
        </div>
    </div>
</div>

    <section class="content pb-3">
        <div class="container-fluid h-100">
            <div class="card card-row card-warning" style="width: 55vh !important;">
                <div class="card-header">
                    <h3 class="card-title">
                        Open
                    </h3>
                </div>
                <div class="card-body">

                    @foreach (var e in EstimateRequestModel)
                    {
                        <div class="card card-primary card-outline">
                            <div class="card-header">
                                <h5 class="card-title">@($"Customer: {e.Customer.FirstName} {e.Customer.LastName} ({e.Vehicle.PlateNo})")</h5>
                                <div class="card-tools">
                                    <a href="@($"/operations/estimates/{e.Id}")" class="btn btn-tool btn-link">#@e.Id</a>
                                    <i class="fas fa-pen"></i>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="custom-control">
                                    <label>@($"Vehicle: {e.Vehicle.VehicleModel.VehicleMake.Name} {e.Vehicle.VehicleModel.Name}")</label>
                                    <br />
                                    <label>@($"Reference No.: {e.ReferenceNo}")</label>
                                    <p>
                                        @($"Remarks: {e.Summary}")
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="card card-row card-default" style="width: 55vh !important;">
                <div class="card-header bg-info">
                    <h3 class="card-title">
                        In Progress
                    </h3>
                </div>
                <div class="card-body">
                    @foreach (var e in JobOrderRequestModel)
                    {
                        <div class="card card-primary card-outline">
                            <div class="card-header">
                                <h5 class="card-title">@($"Customer: {e.Customer.FirstName} {e.Customer.LastName} ({e.Vehicle.PlateNo})")</h5>
                                <div class="card-tools">
                                    <a href="@($"/operations/job-orders/{e.Id}")" class="btn btn-tool btn-link">#@e.Id</a>
                                    <i class="fas fa-pen"></i>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="custom-control">
                                    <label>@($"Vehicle: {e.Vehicle.VehicleModel.VehicleMake.Name} {e.Vehicle.VehicleModel.Name}")</label>
                                    <br />
                                    <label>@($"Reference No.: {e.ReferenceNo}")</label>
                                    <p>
                                        @($"Remarks: {e.Summary}")
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            
            <div class="card card-row card-success" style="width: 55vh !important;">
                <div class="card-header">
                    <h3 class="card-title">
                        Done
                    </h3>
                </div>
                <div class="card-body">
                    <div class="card-body">
                        @foreach (var e in JobOrderCompletedRequestModel)
                        {
                            <div class="card card-primary card-outline">
                                <div class="card-header">
                                    <h5 class="card-title">@($"Customer: {e.Customer.FirstName} {e.Customer.LastName} - {e.Vehicle.PlateNo}")</h5>
                                    <div class="card-tools">
                                        <a href="@($"/operations/job-orders/{e.Id}")" class="btn btn-tool btn-link">#@e.Id</a>
                                        <i class="fas fa-pen"></i>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="custom-control">
                                        <label>@($"Vehicle: {e.Vehicle.VehicleModel.VehicleMake.Name} {e.Vehicle.VehicleModel.Name}")</label>
                                        <br />
                                        <label>@($"Reference No.: {e.ReferenceNo}")</label>
                                        <p>
                                            @($"Remarks: {e.Summary}")
                                        </p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

</div>