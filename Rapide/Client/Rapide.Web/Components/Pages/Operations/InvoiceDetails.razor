@page "/operations/invoices/add"
@page "/operations/invoices/{invoiceId}"

@using MudBlazor
@using Rapide.DTO
@using Rapide.Web.Components.Pages.Components
@using Rapide.Web.Helpers

@if (IsLoading)
{
    <MudOverlay Visible="true" DarkBackground="true" ZIndex="9999">
        <MudProgressCircular Color="Color.Secondary" Size="Size.Large" Class="ms-n1" Indeterminate="true" />
    </MudOverlay>
}

<!-- #region Message Box -->

<MudMessageBox @ref="mbox" Title="Confirmation" CancelText="No">
    <MessageContent>
        <i class="bi bi-exclamation-triangle"></i> Are you sure you want to save changes?
    </MessageContent>
    <YesButton>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Check">Yes</MudButton>
    </YesButton>
</MudMessageBox>

<MudMessageBox @ref="mboxCustom" Title="Confirmation" CancelText="No">
    <MessageContent>
        <i class="bi bi-exclamation-triangle"></i> @mBoxCustomMessage
    </MessageContent>
    <YesButton>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Check">Yes</MudButton>
    </YesButton>
</MudMessageBox>

<MudMessageBox @ref="mboxError" Title="Warning!">
    <MessageContent>
        <i class="bi bi-exclamation-triangle"></i> @mBoxCustomMessage
    </MessageContent>
    <YesButton>
        <MudButton Variant="Variant.Filled" Color="Color.Error" StartIcon="@Icons.Material.Filled.Check">OK</MudButton>
    </YesButton>
</MudMessageBox>

<!-- #endregion -->

<PageTitle>Manage Invoice</PageTitle>

<div class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1 class="m-0">Manage Invoice</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="/operations/invoices">Invoice List</a></li>
                    <li class="breadcrumb-item active">Manage Invoice</li>
                </ol>
            </div>
        </div>
    </div>
</div>


<section class="content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-md-6" style="padding-bottom: 10px !important;">
                <MudChip T="string" Icon="@Icons.Material.Filled.VerifiedUser" Color="Color.Info">@JobStatusName</MudChip>
                <MudChip T="string" Icon="@Icons.Material.Filled.Person2" Color="Color.Warning">@CustomerName</MudChip>
                @if (!hasPayment && !isViewOnly)
                {
                    <MudButton Disabled="@(!IsEditMode)" @onclick="OnProceedToPaymentClick" Size="@Size.Medium" Variant="Variant.Filled" Color="Color.Success" StartIcon="@Icons.Material.Filled.Approval">Proceed to Payment</MudButton>
                }
            </div>
            <div class="col-md-6" style="padding-bottom: 10px !important;">
                <MudStack Justify="Justify.FlexEnd" Row>
                    @if (isBigThreeRoles)
                    {
                        <MudButton Disabled="!IsEditMode" 
                            @onclick="OnCancelInvoiceClick" 
                            Size="@Size.Medium" 
                            Variant="Variant.Filled" 
                            Color="Color.Error" 
                            StartIcon="@Icons.Material.Filled.Delete">Cancel</MudButton>

                        <MudButton @onclick="OnReOpenClick"
                            Size="@Size.Medium"
                            Variant="Variant.Filled"
                            Color="Color.Error"
                            Disabled="IsEditMode"
                            StartIcon="@Icons.Material.Filled.Delete">Re-OPEN</MudButton>
                    }
                </MudStack>
            </div>

        </div>


        <div class="row">
            <MudForm @ref="form" @bind-IsValid="@success" @bind-Errors="@errors" Class="mud-form-custom" Disabled>
                @* Invoice Information *@
                <div class="col-md-12">
                    <div class="card card-secondary">
                        <div class="card-header">
                            <h3 class="card-title">Invoice Information</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>

                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>Status</label>
                                        <MudAutocomplete T="JobStatusDTO"
                                                         Margin="Margin.Dense"
                                                         Disabled="true"
                                                         @bind-Value="InvoiceRequestModel.JobStatus"
                                                         Variant="Variant.Outlined"
                                                         ToStringFunc="@(e=> e==null?null : e.Name)"
                                                         Required="true" RequiredError="This field is required!"
                                                         Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search"
                                                         ShowProgressIndicator="true"
                                                         Strict="false"
                                                         Clearable="true">
                                            <NoItemsTemplate>
                                                <MudText Align="Align.Center" Class="px-4 py-1">
                                                    No items found
                                                </MudText>
                                            </NoItemsTemplate>
                                        </MudAutocomplete>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>Reference No.<code> *</code></label>
                                        <MudTextField T="string"
                                                      MaxLength="100"
                                                      Disabled="true"
                                                      @bind-Value="InvoiceRequestModel.InvoiceNo"
                                                      For="(() => InvoiceRequestModel.InvoiceNo)"
                                                      Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Numbers"
                                                      Margin="Margin.Dense" Variant="Variant.Outlined" Clearable />
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>Transaction Date</label>
                                        <MudDatePicker DateFormat="MM/dd/yyyy"
                                                       Variant="Variant.Outlined"
                                                       Margin="Margin.Dense"
                                                       @bind-Date="InvoiceRequestModel.InvoiceDate" />
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>Due Date</label>
                                        <MudDatePicker DateFormat="MM/dd/yyyy"
                                                       Variant="Variant.Outlined"
                                                       Margin="Margin.Dense"
                                                       @bind-Date="InvoiceRequestModel.DueDate" />
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Customer</label>
                                        <MudAutocomplete T="CustomerDTO"
                                                         Margin="Margin.Dense"
                                                         @bind-Value="InvoiceRequestModel.Customer"
                                                         Variant="Variant.Outlined"
                                                         ToStringFunc="@(e=> e==null?null : $"{e.FirstName} {e.LastName}")"
                                                         Required="true" RequiredError="This field is required!"
                                                         Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search"
                                                         ShowProgressIndicator="true"
                                                         Strict="false"
                                                         Clearable="true">
                                            <NoItemsTemplate>
                                                <MudText Align="Align.Center" Class="px-4 py-1">
                                                    No items found
                                                </MudText>
                                            </NoItemsTemplate>
                                        </MudAutocomplete>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Vehicle</label>
                                        <MudAutocomplete T="VehicleDTO"
                                                         Margin="Margin.Dense"
                                                         @bind-Value="InvoiceRequestModel.JobOrder.Vehicle"
                                                         Variant="Variant.Outlined"
                                                         ToStringFunc="@(e=> e==null?null : $"{e.VehicleModel.VehicleMake.Name} {e.VehicleModel.Name}")"
                                                         Required="true" RequiredError="This field is required!"
                                                         Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search"
                                                         ShowProgressIndicator="true"
                                                         Strict="false"
                                                         Clearable="true">
                                            <NoItemsTemplate>
                                                <MudText Align="Align.Center" Class="px-4 py-1">
                                                    No items found
                                                </MudText>
                                            </NoItemsTemplate>
                                        </MudAutocomplete>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                        </div>
                    </div>
                </div>

                @if (IsPackage)
                {
                    <div class="row" style="padding-left: 10px !important;">
                        @foreach (var p in InvoicePackages)
                        {
                            <div>
                                <MudChip T="int" Value="p.Package.Id" Icon="@Icons.Material.Filled.GifBox" Size="Size.Medium" Color="Color.Success">Package: @p.Package.Name</MudChip>
                            </div>
                        }
                    </div>
                }

                @* Service / Labor Information *@
                <div class="col-md-12">
                    <div class="card card-secondary">
                        <div class="card-header">
                            <h3 class="card-title">Services / Labor</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>

                        <div class="card-body">
                            <div class="row">
                                <JobOrderServiceItemComponent IsJobOrderLocked="isJobOrderLocked" JobOrderServicesParam="JobOrderServices" />
                            </div>
                        </div>

                        <div class="card-footer">
                        </div>
                    </div>
                </div>

                @* Products Information *@
                <div class="col-md-12">
                    <div class="card card-secondary">
                        <div class="card-header">
                            <h3 class="card-title">Products</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>

                        <div class="card-body">
                            <div class="row">
                                <JobOrderProductItemComponent IsJobOrderLocked="isJobOrderLocked" JobOrderProductParam="JobOrderProducts" />
                            </div>
                        </div>
                        <div class="card-footer">
                        </div>
                    </div>
                </div>

                @* Service Person Involve *@
                <div class="col-md-12">
                    <div class="card card-secondary">
                        <div class="card-header">
                            <h3 class="card-title">Service Person Involve</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>

                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Service Advisor<code> *</code></label>
                                        <MudAutocomplete T="UserDTO"
                                                         Margin="Margin.Dense"
                                                         @bind-Value="InvoiceRequestModel.AdvisorUser"
                                                         Variant="Variant.Outlined"
                                                         ToStringFunc="@(e=> e==null?null : $"{e.FirstName} {e.LastName}")"
                                                         Required="true" RequiredError="This field is required!"
                                                         Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search"
                                                         ShowProgressIndicator="true"
                                                         Strict="false"
                                                         Clearable="true">
                                            <NoItemsTemplate>
                                                <MudText Align="Align.Center" Class="px-4 py-1">
                                                    No items found
                                                </MudText>
                                            </NoItemsTemplate>
                                        </MudAutocomplete>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Estimator<code> *</code></label>
                                        <MudAutocomplete T="UserDTO"
                                                         Margin="Margin.Dense"
                                                         @bind-Value="InvoiceRequestModel.JobOrder.EstimatorUser"
                                                         Variant="Variant.Outlined"
                                                         ToStringFunc="@(e=> e==null?null : $"{e.FirstName} {e.LastName}")"
                                                         Required="true" RequiredError="This field is required!"
                                                         Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search"
                                                         ShowProgressIndicator="true"
                                                         Strict="false"
                                                         Clearable="true">
                                            <NoItemsTemplate>
                                                <MudText Align="Align.Center" Class="px-4 py-1">
                                                    No items found
                                                </MudText>
                                            </NoItemsTemplate>
                                        </MudAutocomplete>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Approved By<code> *</code></label>
                                        <MudAutocomplete T="UserDTO"
                                                         Margin="Margin.Dense"
                                                         @bind-Value="InvoiceRequestModel.JobOrder.ApproverUser"
                                                         Variant="Variant.Outlined"
                                                         ToStringFunc="@(e=> e==null?null : $"{e.FirstName} {e.LastName}")"
                                                         Required="true" RequiredError="This field is required!"
                                                         Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search"
                                                         ShowProgressIndicator="true"
                                                         Strict="false"
                                                         Clearable="true">
                                            <NoItemsTemplate>
                                                <MudText Align="Align.Center" Class="px-4 py-1">
                                                    No items found
                                                </MudText>
                                            </NoItemsTemplate>
                                        </MudAutocomplete>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                @* Technician List *@
                                <JobOrderTechnicianComponent IsJobOrderLocked="isJobOrderLocked" JobOrderTechnicianParam="JobOrderTechnicians" />
                            </div>

                        </div>
                        <div class="card-footer">
                        </div>
                    </div>
                </div>

                @* Summary *@
                <div class="col-md-12">
                    <div class="card card-secondary">
                        <div class="card-header">
                            <h3 class="card-title">Summary</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>

                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Summary</label>
                                        <MudTextField T="string"
                                                      Lines="3"
                                                      MaxLength="255"
                                                      @bind-Value="InvoiceRequestModel.Summary"
                                                      For="(() => InvoiceRequestModel.Summary)"
                                                      Margin="Margin.Dense" Variant="Variant.Outlined" Clearable />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group row align-items-center">
                                        <label class="col-sm-4 text-sm-end">Sub Total<code> *</code></label>
                                        <div class="col-sm-8">
                                            <MudTextField T="decimal"
                                                          Disabled="true" Format="N2"
                                                          Value="InvoiceRequestModel.SubTotal"
                                                          For="(() => InvoiceRequestModel.SubTotal)"
                                                          Class="align-right"
                                                          Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Money"
                                                          Margin="Margin.Dense" Variant="Variant.Outlined" />
                                        </div>
                                    </div>
                                    <div class="form-group row align-items-center">
                                        <label class="col-sm-4 text-sm-end">VAT (12%)<code> *</code></label>
                                        <div class="col-sm-8">
                                            <MudTextField Disabled="true" Format="N2"
                                                          @bind-Value="InvoiceRequestModel.VAT12"
                                                          For="(() => InvoiceRequestModel.VAT12)"
                                                          Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Money"
                                                          Margin="Margin.Dense" Variant="Variant.Outlined" />
                                        </div>
                                    </div>
                                    <div class="form-group row align-items-center">
                                        <label class="col-sm-4 text-sm-end">Labor Discount<code> *</code></label>
                                        <div class="col-sm-8">
                                            <MudNumericField T="decimal" Format="N2" Min="0"
                                                             @bind-Value="InvoiceRequestModel.LaborDiscount"
                                                             Immediate="true"
                                                             Required="true" RequiredError="This field is required!"
                                                             Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Money"
                                                             Margin="Margin.Dense" Variant="Variant.Outlined" />
                                        </div>
                                    </div>
                                    <div class="form-group row align-items-center">
                                        <label class="col-sm-4 text-sm-end">Product Discount<code> *</code></label>
                                        <div class="col-sm-8">
                                            <MudNumericField T="decimal" Format="N2" Min="0"
                                                             @bind-Value="InvoiceRequestModel.ProductDiscount"
                                                             Immediate="true"
                                                             Required="true" RequiredError="This field is required!"
                                                             Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Money"
                                                             Margin="Margin.Dense" Variant="Variant.Outlined" />
                                        </div>
                                    </div>
                                    <div class="form-group row align-items-center">
                                        <label class="col-sm-4 text-sm-end">Additional Discount<code> *</code></label>
                                        <div class="col-sm-8">
                                            <MudNumericField T="decimal" Format="N2" Min="0"
                                                             @bind-Value="InvoiceRequestModel.AdditionalDiscount"
                                                             Immediate="true"
                                                             Required="true" RequiredError="This field is required!"
                                                             Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Money"
                                                             Margin="Margin.Dense" Variant="Variant.Outlined" />
                                        </div>
                                    </div>
                                    <div class="form-group row align-items-center">
                                        <label class="col-sm-4 text-sm-end">Total Amount<code> *</code></label>
                                        <div class="col-sm-8">
                                            <MudTextField Disabled="true" Format="N2"
                                                          @bind-Value="InvoiceRequestModel.TotalAmount"
                                                          For="(() => InvoiceRequestModel.TotalAmount)"
                                                          Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Money"
                                                          Margin="Margin.Dense" Variant="Variant.Outlined" />
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="card-footer">
                        </div>
                    </div>
                </div>
            </MudForm>
        </div>

        <div class="row">
            @if (!isJobOrderLocked)
            {
                <div class="col-md-6" style="padding-bottom: 10px !important;">
                    <button @onclick="OnSaveClick" type="button" class="btn btn-primary btn-block"><i class="fa fa-floppy-o"></i> Save</button>
                </div>
            }
            <div class="@(isJobOrderLocked ? "col-md-12" : "col-md-6")">
                <button @onclick="OnCancelClick" type="button" class="btn btn-danger btn-block"><i class="fa fa-ban"></i> Cancel</button>
            </div>
        </div>
    </div>
</section>