@page "/administrators/user-roles/add"
@page "/administrators/user-roles/{userRoleId}"
@using MudBlazor

@if (IsLoading)
{
    <MudOverlay Visible="true" DarkBackground="true" ZIndex="9999">
        <MudProgressCircular Color="Color.Secondary" Size="Size.Large" Class="ms-n1" Indeterminate="true" />
    </MudOverlay>
}

<MudMessageBox @ref="mbox" Title="Confirmation" CancelText="No">
    <MessageContent>
        <i class="bi bi-exclamation-triangle"></i> Are you sure you want to save changes?
    </MessageContent>
    <YesButton>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Check">Yes</MudButton>
    </YesButton>
</MudMessageBox>

<PageTitle>Manage User Role</PageTitle>



<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Manage User Roles</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="/administrators/user-roles">User Roles List</a></li>
                    <li class="breadcrumb-item active">User Roles</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        @if (IsError)
        {
            <div class="row">
                <div class="col-md-12" style="margin-bottom: 15px !important;">
                    <MudAlert Severity="Severity.Error" Variant="Variant.Filled">@ErrorMessage</MudAlert>
                </div>
            </div>
        }
        
        <div class="row">
            <div class="col-md-12">
                <div class="card card-secondary">
                    <div class="card-header small" >
                        <h3 class="card-title"></h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>

                    <div class="card-body">
                        <MudForm @ref="form" @bind-IsValid="@success" @bind-Errors="@errors" Class="mud-form-custom">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>User Role Name<code> *</code></label>
                                        <MudTextField T="string" 
                                            Required="true" RequiredError="Name is required!"
                                            MaxLength="100"
                                            @bind-Value="RoleRequestModel.Name"
                                            For="(() => RoleRequestModel.Name)"
                                            Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Person"
                                            Margin="Margin.Dense" Variant="Variant.Outlined" Clearable />
                                    </div>

                                    <div class="form-group">
                                        <label>Description</label>
                                        <MudTextField T="string"
                                            Lines="3"
                                            MaxLength="255"
                                            @bind-Value="RoleRequestModel.Description"
                                            For="(() => RoleRequestModel.Description)"
                                            Margin="Margin.Dense" Variant="Variant.Outlined" Clearable />
                                    </div>
                                </div>
                            </div>
                        </MudForm>
                    </div>
                    <div class="card-footer">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6" style="padding-bottom: 10px !important;">
                        <button type="button" @onclick="OnSaveClick" class="btn btn-primary btn-block"><i class="fa fa-floppy-o"></i> Save</button>
                    </div>
                    <div class="col-md-6">
                        <button type="button" @onclick="OnCancelClick" class="btn btn-danger btn-block"><i class="fa fa-ban"></i> Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>