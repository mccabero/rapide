@page "/administrators/company"
@using MudBlazor

@if (IsLoading)
{
    <MudOverlay Visible="true" DarkBackground="true" ZIndex="9999">
        <MudProgressCircular Color="Color.Secondary" Size="Size.Large" Class="ms-n1" Indeterminate="true" />
    </MudOverlay>
}

<MudMessageBox @ref="mbox" Title="Confirmation" CancelText="No">
    <MessageContent>
        <i class="bi bi-exclamation-triangle"></i> Are you sure you want to save changes?
    </MessageContent>
    <YesButton>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Check">Yes</MudButton>
    </YesButton>
</MudMessageBox>

<PageTitle>Manage Company Details</PageTitle>

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h4 class="m-0">Company Information</h4>
                <div class="m-0">Management Page</div>
                @* <div class="m-0"><MudChip T="string" Icon="@Icons.Material.Filled.Work" Color="Color.Info">Management Page</MudChip> </div> *@
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active">Company Information</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        @* <div class="row">
            <div class="col-md-12" style="padding-bottom: 10px !important;">
                <MudStack Justify="Justify.FlexStart" Row>
                    <MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Save" Color="Color.Success">Save</MudButton>
                    <MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Cancel" Color="Color.Error">Cancel</MudButton>
                </MudStack>
            </div>
        </div> *@
        <div class="row">
            <div class="col-md-12">
                <div class="card card-default">
                    <div class="card-header small">
                        <h3 class="card-title">Update Company Details</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>

                    <div class="card-body">
                        <MudForm @ref="form" @bind-IsValid="@success" @bind-Errors="@errors" Class="mud-form-custom">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Company Name<code> *</code></label>
                                        <MudTextField T="string"
                                                      Required="true"
                                                      RequiredError="This is required!"
                                                      MaxLength="100"
                                                      @bind-Value="CompanyRequestModel.Name"
                                                      For="(() => CompanyRequestModel.Name)"
                                                      Adornment="Adornment.End" AdornmentIcon="@Icons.Material.Filled.Work"
                                                      Margin="Margin.Dense" Variant="Variant.Outlined" Clearable />
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Company Address<code> *</code></label>
                                        <MudTextField T="string"
                                                      Required="true"
                                                      RequiredError="This is required!"
                                                      MaxLength="255"
                                                      @bind-Value="CompanyRequestModel.Address"
                                                      For="(() => CompanyRequestModel.Address)"
                                                      Adornment="Adornment.End" AdornmentIcon="@Icons.Material.Filled.Directions"
                                                      Margin="Margin.Dense" Variant="Variant.Outlined" Clearable />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Email Address<code> *</code></label>
                                        <MudTextField T="string"
                                                      Required="true"
                                                      RequiredError="This is required!"
                                                      MaxLength="255"
                                                      @bind-Value="CompanyRequestModel.Email"
                                                      For="(() => CompanyRequestModel.Email)"
                                                      Adornment="Adornment.End" AdornmentIcon="@Icons.Material.Filled.Email"
                                                      Margin="Margin.Dense" Variant="Variant.Outlined" Clearable />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Mobile Number<code> *</code></label>
                                        <MudTextField T="string"
                                                      Required="true"
                                                      RequiredError="This is required!"
                                                      MaxLength="11"
                                                      @bind-Value="CompanyRequestModel.MobileNumber"
                                                      For="(() => CompanyRequestModel.MobileNumber)"
                                                      Adornment="Adornment.End" AdornmentIcon="@Icons.Material.Filled.Phone"
                                                      Margin="Margin.Dense" Variant="Variant.Outlined" Clearable />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>GCash Account No.<code> *</code></label>
                                        <MudTextField T="string"
                                                      Required="true"
                                                      RequiredError="This is required!"
                                                      MaxLength="11"
                                                      @bind-Value="CompanyRequestModel.GCash"
                                                      For="(() => CompanyRequestModel.GCash)"
                                                      Adornment="Adornment.End" AdornmentIcon="@Icons.Material.Filled.Numbers"
                                                      Margin="Margin.Dense" Variant="Variant.Outlined" Clearable />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Bank Account No.<code> *</code></label>
                                        <MudTextField T="string"
                                                      Required="true"
                                                      RequiredError="This is required!"
                                                      MaxLength="100"
                                                      @bind-Value="CompanyRequestModel.BankNo"
                                                      For="(() => CompanyRequestModel.BankNo)"
                                                      Adornment="Adornment.End" AdornmentIcon="@Icons.Material.Filled.Numbers"
                                                      Margin="Margin.Dense" Variant="Variant.Outlined" Clearable />
                                    </div>
                                </div>
                                
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>TIN Number<code> *</code></label>
                                        <MudTextField T="string"
                                                      Required="true"
                                                      RequiredError="This is required!"
                                                      MaxLength="255"
                                                      @bind-Value="CompanyRequestModel.TIN"
                                                      For="(() => CompanyRequestModel.TIN)"
                                                      Adornment="Adornment.End" AdornmentIcon="@Icons.Material.Filled.Numbers"
                                                      Margin="Margin.Dense" Variant="Variant.Outlined" Clearable />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label style="margin-top: 18px !important;"></label>
                                        <MudStack Justify="Justify.FlexStart" Row>
                                            <MudFileUpload T="IBrowserFile" OnFilesChanged="UploadFiles" Accept=".png, .jpeg, .jpg">
                                                <ActivatorContent>
                                                    <MudFab Color="Color.Tertiary"
                                                            StartIcon="@Icons.Material.Filled.Image"
                                                            Size="Size.Medium"
                                                            Label="Upload Company Logo" />
                                                </ActivatorContent>
                                            </MudFileUpload>

                                            <MudFileUpload T="IBrowserFile" OnFilesChanged="UploadFilesDefault" Accept=".png, .jpeg, .jpg">
                                                <ActivatorContent>
                                                    <MudFab Color="Color.Secondary"
                                                            StartIcon="@Icons.Material.Filled.Image"
                                                            Size="Size.Medium"
                                                            Label="Upload Default Logo" />
                                                </ActivatorContent>
                                            </MudFileUpload>
                                        </MudStack>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="table table-striped files" id="previews">
                                        @foreach (var f in companyLogo)
                                        {
                                            <div id="template" class="d-flex align-items-center mt-2">
                                                <div class="btn-group" style="grid-gap: 10px;">
                                                    <MudButton Size="Size.Medium" @onclick="@(() => OpenFileDefault(Path.GetFileName(f), false))" Color="@Color.Primary" Variant="Variant.Filled">
                                                        <i class="fas fa-eye"></i>
                                                    </MudButton>
                                                </div>
                                                <div class="d-flex align-items-center px-4">
                                                    <p class="mb-0">
                                                        <span class="lead">[Company Logo] @Path.GetFileName(f)</span>
                                                    </p>
                                                </div>
                                            </div>
                                        }

                                        @foreach (var f in defaultlogo)
                                        {
                                            <div id="template" class="d-flex align-items-center mt-2">
                                                <div class="btn-group" style="grid-gap: 10px;">
                                                    <MudButton Size="Size.Medium" @onclick="@(() => OpenFileDefault(Path.GetFileName(f), true))" Color="@Color.Primary" Variant="Variant.Filled">
                                                        <i class="fas fa-eye"></i>
                                                    </MudButton>
                                                </div>
                                                <div class="d-flex align-items-center px-4">
                                                    <p class="mb-0">
                                                        <span class="lead">[Default Logo] @Path.GetFileName(f)</span>
                                                    </p>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="mud-image-wrapper">
                                        <MudImage Fluid="true" Src="@imageSource" Class="rounded-lg" />
                                    </div>
                                </div>
                            </div>

                        </MudForm>
                    </div>

                    <div class="card-footer">
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6" style="padding-bottom: 10px !important;">
                <button type="button" @onclick="OnSaveClick" class="btn btn-primary btn-block"><i class="fa fa-floppy-o"></i> Save</button>
            </div>
            <div class="col-md-6">
                <button type="button" @onclick="OnCancelClick" class="btn btn-danger btn-block"><i class="fa fa-ban"></i> Cancel</button>
            </div>
        </div>
    </div>
</section>